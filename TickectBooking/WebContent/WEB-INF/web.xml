<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

                             
         <servlet>
         <servlet-name>search</servlet-name>
         <servlet-class>train.Servlet.TicketBookingServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>search</servlet-name>
         <url-pattern>/search</url-pattern>
         </servlet-mapping>
         
         <servlet>
         <servlet-name>ReservationMake</servlet-name>
         <servlet-class>train.Servlet.ReservationMakeServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>ReservationMake</servlet-name>
         <url-pattern>/make</url-pattern>
         </servlet-mapping>
         
         <servlet>
         <servlet-name>UpdateReservation</servlet-name>
         <servlet-class>train.Servlet.UpdateReservationServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>UpdateReservation</servlet-name>
         <url-pattern>/update</url-pattern>
         </servlet-mapping>
         
         <servlet>
         <servlet-name>DeleteReservation</servlet-name>
         <servlet-class>train.Servlet.DeleteReservationServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>DeleteReservation</servlet-name>
         <url-pattern>/Delete</url-pattern>
         </servlet-mapping>

         
</web-app>         